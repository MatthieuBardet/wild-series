{% extends "base.html.twig" %}

{% block title %}{{ program.title }} #{{ season.number }}{% endblock %}

{% block body %}

    <h1 class="mt-0">{{ program.title }} - Saison {{ season.number }} ({{ season.year }})</h1>
    <h2>Liste des épisodes :</h2>
    <ul>
        {% for episode in season.episodes %}
            <li>
                <a href="{{ path('program_episode_show',{program: program.slug, season: season.id, episode: episode.slug}) }}">{{ episode.number }}. {{ episode.title }}</a>
            </li>
        {% endfor %}
    </ul>
    <a href="{{ path('program_index') }}">
        Retour à la liste des programmes
    </a>

{% endblock %}